# Database connection URL (async driver for FastAPI)
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://fullfil:fullfil@db:5432/fullfil

# Redis connection URL (used for Celery broker and SSE pub/sub)
# Format: redis://host:port/db_number
REDIS_URL=redis://redis:6379/0

# Directory for uploaded CSV files
# Use /uploads inside Docker, ./uploads for local development
UPLOAD_DIR=/uploads

# Number of products to process per batch during CSV import
# Higher values = faster but more memory usage
IMPORT_BATCH_SIZE=10000

# Number of concurrent Celery worker processes
# Adjust based on available CPU cores
CELERY_CONCURRENCY=4

# Maximum allowed file size for CSV uploads (in MB)
MAX_FILE_SIZE_MB=500

# CORS allowed origins (comma-separated or * for all)
# In production, set to your frontend domain(s)
ALLOWED_ORIGINS=*
